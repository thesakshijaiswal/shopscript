<header class="header-nav">
  <div class="left-nav">
    <a href="/" class="logo">
      <img width="60" height="50" loading="lazy" src="{{ 'logo.png' | asset_url }}">
      <p class="logo-text">ShopScript.</p>
    </a>

    <button class="hamburger" aria-label="Toggle navigation">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>
  </div>

  <ul class="middle-nav-bar">
    {% for link in linklists['main-menu'].links -%}
      <li>{{ link.title | link_to: link.url }}</li>
    {%- endfor %}
  </ul>

  <div class="right-nav-items">
    <form action="/search" method="get">
      <input class="search-nav" type="text" name="q" value="{{ search.terms }}" placeholder="Search">
    </form>
    <div class="cart-icon">
      <a href="/cart">
        <img width="40" height="40" loading="lazy" src="{{ 'shopping-cart.png' | asset_url }}">
      </a>
      <span>{{ cart.item_count }}</span>
    </div>
  </div>
</header>
