{% form 'cart', cart %}
  <h1>cart</h1>
  {% for item in cart.items %}
    <div>
      <img src="{{ item.image|image_url }}" width="200" height="200">
      <h2>{{ item.title }}</h2>
      <p>{{ item.price | money }}</p>
    </div>
  {% endfor %}
  <button type="submit" name="checkout">Checkout</button>
{% endform %}
