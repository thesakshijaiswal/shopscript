<footer class="footer-main">
  <div class="footer-sec-1">
    {%- if section.blocks.size == 0 -%}
      <div>
        <h1>ShopScript.</h1>
        <p class="footer-tag-line">From Cart to Heart, We've Got You.</p>
      </div>
      <div>
        <p class="footer-sec-head">Products</p>
        <p class="footer-sec-tagline">Explore our wide range of products</p>
        <p>Jackets and T-Shirts</p>
        <p>Shoes and Slippers</p>
      </div>
      <div>
        <p class="footer-sec-head">Contact Us</p>
        <p class="footer-sec-tagline">We're here to help you!</p>
        <p>Email: support@shopscript.com</p>
        <p>privacy policy</p>
      </div>
    {% else %}
      {% for block in section.blocks %}
        <div>
          <li>
            <a href="{{ block.settings.link }}">{{ block.settings.text | escape }}</a>
          </li>
          <li>
            <a href="{{ block.settings.link }}">{{ block.settings.text | escape }}</a>
          </li>
          <li>
            <a href="{{ block.settings.link }}">{{ block.settings.text | escape }}</a>
          </li>
          <li>
            <a href="{{ block.settings.link }}">{{ block.settings.text | escape }}</a>
          </li>
        </div>
      {% endfor %}
    {% endif %}
  </div>
  <div class="footer-sec-2">Made with ❤️ by Sakshi Jaiswal</div>
</footer>

<style>
  .footer-main {
    background: {{section.settings.background}};
    color: {{ section.settings.text_color }};
    padding: 10px;
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "name": "Links",
      "type": "links",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "footer"
    }
  ]
}
{% endschema %}
