<section>
  {% if section.settings.image != blank %}
    <div class="hero-user">
      <div class="offer-hero">
        <p class="hero-1">LIMITED TIME ONLY</p>
        <h3>UPTO 25% OFF</h3>
        <p class="hero-2">All Jackets & T-Shirts</p>
        <p class="hero-3">LET'S <span>STAYTRENDY</span></p>
        <button>SHOP NOW</button>
      </div>
    </div>
  {% else %}
    <div class="hero">
      <div class="offer-hero">
        <p class="hero-1">LIMITED TIME ONLY</p>
        <h3>UPTO 25% OFF</h3>
        <p class="hero-2">All Jackets & T-Shirts</p>
        <p class="hero-3">LET'S <span>STAYTRENDY</span></p>
        <button>SHOP NOW</button>
      </div>
    </div>
