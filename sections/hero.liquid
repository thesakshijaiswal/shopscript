<style>
  .hero-user {
    height: 100%;
    background-image: url('{{ section.settings.image | image_url }}');
    background-repeat: no-repeat;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    background-size: cover;
    background-position: center top;
  }
</style>

