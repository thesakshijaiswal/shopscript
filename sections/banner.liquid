<section>
  <div class="banner-wrapper">
    <div class="slide-text" id="text-1">Members: Free Shipping!</div>
    <div class="slide-text" id="text-2">Save Up to 25% on Products</div>
    <div class="slide-text" id="text-3">Get Your Gear Faster ...</div>
  </div>
</section>

<style>
  .banner-wrapper {
    background: {{ section.settings.background }};
    color: {{ section.settings.text-color }};
    position: relative;
    height: 60px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 30px 0px;
    font-size: 1rem;
    text-align: center;
  }

  .slide-text {
    position: absolute;
    white-space: nowrap;
    top: 50%;
    transform: translateY(-50%);
    color: #ffffff;
    opacity: 0;
    left: -100%;
  }

  .slide-text.showing {
    animation: slideInOut 3s ease-in-out forwards;
  }

  @keyframes slideInOut {
    0% {
      left: -100%;
      opacity: 0;
    }
    15% {
      left: 50%;
      transform: translateX(-50%) translateY(-50%);
      opacity: 1;
    }
    85% {
      left: 50%;
      transform: translateX(-50%) translateY(-50%);
      opacity: 1;
    }
    100% {
      left: 100%;
      opacity: 0;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const texts = document.querySelectorAll('.slide-text');
    let currentIndex = 0;

    function showNextText() {
      texts.forEach((el) => el.classList.remove('showing'));
      texts[currentIndex].classList.add('showing');
      currentIndex = (currentIndex + 1) % texts.length;
    }

    showNextText();
    setInterval(showNextText, 3000);
  });
</script>

{% schema %}
{
  "name": "Banner",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text-color",
      "label": "Text",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "banner"
    }
  ]
}
{% endschema %}
